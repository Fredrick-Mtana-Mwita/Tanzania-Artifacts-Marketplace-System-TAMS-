@model IEnumerable<Tanzania_Artifacts_MarketPlace_System_NEW_1_.Models.Product>
@{
    ViewData["Title"] = "Product Approval";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container py-5 animate__animated animate__fadeIn">
    <h2 class="text-center fw-bold text-primary mb-4">
        <i class="bi bi-shield-check me-2"></i>Product Approval Panel
    </h2>

    @if (Model != null && Model.Any())
    {
        <div class="table-responsive rounded-4 shadow-sm border">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light text-center">
                    <tr>
                        <th>#</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Seller</th>
                        <th>Price</th>
                        <th>Date Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr class="text-center">
                            <td>@product.Id</td>
                            <td>
                                <img src="@(product.Images.FirstOrDefault(i => i.IsMain)?.Url ?? "/images/no-image.png")"
                                     alt="Product Image"
                                     class="rounded"
                                     style="width: 60px; height: 60px; object-fit: cover; border: 1px solid #dee2e6;" />

                            </td>
                            <td>@product.Name</td>
                            <td>@product.Seller?.FirstName @product.Seller?.LastName</td>
                            <td class="fw-semibold text-success">TSh @product.Price.ToString("N2")</td>
                            <td>@product.DateCreated.ToString("yyyy-MM-dd")</td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <form asp-controller="Admin" asp-action="ApproveProduct" asp-route-id="@product.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-success shadow-sm px-3" title="Approve"
                                                onclick="return confirm('Are you sure you want to approve this product?');">
                                            <i class="bi bi-check-circle-fill me-1"></i>Approve
                                        </button>
                                    </form>

                                    <form asp-controller="Admin" asp-action="RejectProduct" asp-route-id="@product.Id" method="post">
                                        <button type="submit" class="btn btn-sm btn-danger shadow-sm px-3" title="Reject"
                                                onclick="return confirm('Are you sure you want to reject this product?');">
                                            <i class="bi bi-x-circle-fill me-1"></i>Reject
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center shadow-sm mt-5 rounded-4">
            <i class="bi bi-info-circle me-2"></i> No products pending approval at the moment.
        </div>
    }
</div>
