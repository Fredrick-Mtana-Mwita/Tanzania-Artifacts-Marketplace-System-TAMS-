@model AdminDashboardVM
@{
    ViewData["Title"] = "Admin Dashboard";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />


<div class="container py-5 animate__animated animate__fadeIn">
    <h2 class="text-center fw-bold text-primary mb-5 animate__animated animate__fadeInDown">📊 Admin Dashboard</h2>

    <!-- Metrics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-sm-6 col-lg-4">
            <div class="card dashboard-card text-center shadow border-0 rounded-4 p-3">
                <i class="bi bi-people-fill fs-1 text-info icon-float mb-2"></i>
                <h5>Total Users</h5>
                <p class="fs-4 fw-semibold">@Model.TotalUsers</p>
            </div>
        </div>
        <div class="col-sm-6 col-lg-4">
            <div class="card dashboard-card text-center shadow border-0 rounded-4 p-3">
                <i class="bi bi-shop-window fs-1 text-success icon-float mb-2"></i>
                <h5>Total Sellers</h5>
                <p class="fs-4 fw-semibold">@Model.TotalSellers</p>
            </div>
        </div>
        <div class="col-sm-6 col-lg-4">
            <div class="card dashboard-card text-center shadow border-0 rounded-4 p-3">
                <i class="bi bi-cart-check-fill fs-1 text-warning icon-float mb-2"></i>
                <h5>Total Orders</h5>
                <p class="fs-4 fw-semibold">@Model.TotalOrders</p>
            </div>
        </div>
    </div>

    <!-- Orders Status -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card dashboard-card text-center shadow border-0 rounded-4 p-3">
                <i class="bi bi-truck fs-1 text-secondary icon-float mb-2"></i>
                <h5>Pending Orders</h5>
                <p class="fs-4 fw-semibold">@Model.PendingOrders</p>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card dashboard-card text-center shadow border-0 rounded-4 p-3">
                <i class="bi bi-check-circle-fill fs-1 text-success icon-float mb-2"></i>
                <h5>Delivered Orders</h5>
                <p class="fs-4 fw-semibold">@Model.CompletedOrders</p>
            </div>
        </div>
    </div>

    <!-- Recent Orders Table -->
    <div class="card shadow border-0 rounded-4 p-4 mb-4 animate__animated animate__fadeInUp">
        <h4 class="mb-3 text-primary text-center fw-bold"><i class="bi bi-clock-history me-2"></i>Recent Orders</h4>
        <div class="table-responsive">
            <table class="table table-hover table-striped table-bordered align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Order ID</th>
                        <th>User</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.RecentOrders)
                    {
                        <tr>
                            <td>@order.Id</td>
                            <td>@order.User?.FirstName @order.User?.LastName</td>
                            <td>
                                <span class="badge bg-@(order.Status == OrderStatus.Delivered ? "success" : order.Status == OrderStatus.Shipped ? "primary" : "warning")">
                                    @order.Status
                                </span>
                            </td>
                            <td><strong>TSh @order.TotalAmount.ToString("N2")</strong></td>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <!-- Total Sales -->
    <div class="card dashboard-card text-center shadow border-0 rounded-4 p-4 bg-light">
        <h4 class="mb-3 text-dark"><i class="bi bi-bar-chart-line-fill me-2"></i>Sales Summary</h4>
        <div class="fs-4 fw-bold text-success">TSh @Model.TotalSales.ToString("N2")</div>
    </div>
</div>
