@model ReportViewModel
@using System.Text.Json
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Tanzania_Artifacts_MarketPlace_System_NEW_1_.Admin.ViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Reports & Analytics";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container py-5 animate__animated animate__fadeIn">
    <h2 class="text-center text-primary fw-bold mb-4">
        <i class="bi bi-graph-up-arrow me-2"></i>Sales & Analytics
    </h2>

    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow rounded-4 text-center p-4 border-0 h-100 hover-shadow transition">
                <i class="bi bi-cash-stack fs-1 text-success"></i>
                <h5 class="mt-3">Total Sales</h5>
                <p class="fs-4 fw-bold text-success">TSh @Model.TotalSales.ToString("N2")</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow rounded-4 text-center p-4 border-0 h-100 hover-shadow transition">
                <i class="bi bi-cart-check fs-1 text-primary"></i>
                <h5 class="mt-3">Total Orders</h5>
                <p class="fs-4 fw-bold">@Model.TotalOrders</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow rounded-4 text-center p-4 border-0 h-100 hover-shadow transition">
                <i class="bi bi-people-fill fs-1 text-warning"></i>
                <h5 class="mt-3">Total Users</h5>
                <p class="fs-4 fw-bold">@Model.TotalUsers</p>
            </div>
        </div>
    </div>

    <div class="card shadow rounded-4 border-0 mt-5 p-4">
        <h4 class="mb-4 text-secondary"><i class="bi bi-bar-chart me-2"></i>Monthly Sales</h4>
        <canvas id="salesChart" height="120"></canvas>
    </div>

    <div class="card shadow rounded-4 border-0 mt-4 p-4">
        <h4 class="mb-4 text-secondary"><i class="bi bi-download me-2"></i>Download Reports</h4>
        <div class="d-flex flex-wrap gap-3">
            <a class="btn btn-outline-primary px-4 rounded-pill" asp-action="DownloadReport" asp-route-type="pdf">
                <i class="bi bi-file-earmark-pdf me-2"></i>Download PDF
            </a>
            <a class="btn btn-outline-success px-4 rounded-pill" asp-action="DownloadReport" asp-route-type="excel">
                <i class="bi bi-file-earmark-excel me-2"></i>Download Excel
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        const ctx = document.getElementById('salesChart').getContext('2d');
        const salesChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: @Html.Raw(JsonSerializer.Serialize(Model.Months)),
                datasets: [{
                    label: 'Sales (TSh)',
                    data: @Html.Raw(JsonSerializer.Serialize(Model.MonthlySales)),
                    fill: true,
                    borderColor: 'rgba(75, 192, 192, 1)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.3
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'top'
                    },
                    title: {
                        display: false
                    }
                }
            }
        });
    </script>
}
