@model IEnumerable<Order>
@using Tanzania_Artifacts_MarketPlace_System_NEW_1_.Constants

@{
    ViewData["Title"] = "All Orders";
}

<!-- Bootstrap Icons + Animate.css -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<div class="container py-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="fw-bold text-dark text-center mb-2">All Orders</h2>
        <span class="badge bg-gradient bg-secondary fs-6 shadow-sm px-3 py-2">Total Orders: @Model.Count()</span>
    </div>

    <div class="table-responsive shadow-lg rounded-4 border border-light bg-white animate__animated animate__fadeInUp animate__fast">
        <table class="table table-hover align-middle mb-0">
            <thead class="table-light text-center">
                <tr class="fs-6">
                    <th><i class="bi bi-hash"></i> Order ID</th>
                    <th><i class="bi bi-person-circle"></i> Customer</th>
                    <th><i class="bi bi-cash-coin"></i> Total</th>
                    <th><i class="bi bi-calendar-event"></i> Date</th>
                    <th><i class="bi bi-box-seam"></i> Status</th>
                    <th><i class="bi bi-gear"></i> Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr class="hover-row animate__animated animate__fadeInUp animate__faster">
                        <td>@order.Id</td>
                        <td>@order.User?.FirstName @order.User?.LastName</td>
                        <td class="text-success fw-semibold">TSh @order.TotalAmount.ToString("N2")</td>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <span class="badge rounded-pill bg-@(
                                order.Status == OrderStatus.Pending ? "warning" :
                                order.Status == OrderStatus.Shipped ? "primary" :
                                order.Status == OrderStatus.Delivered ? "success" :
                                order.Status == OrderStatus.Cancelled ? "danger" : "secondary"
                            )">
                                @order.Status
                            </span>
                        </td>
                        <td>
                            <div class="d-flex justify-content-center flex-wrap gap-2">
                                <!-- Edit -->
                                <a asp-action="EditOrder" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary shadow-sm transition-btn" title="Edit Order">
                                    <i class="bi bi-pencil-square"></i>
                                </a>

                                <!-- Cancel -->
                                <form asp-action="CancelOrder" asp-route-id="@order.Id" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger shadow-sm transition-btn" title="Cancel Order"
                                            onclick="return confirm('Are you sure you want to cancel this order?');">
                                        <i class="bi bi-x-circle"></i>
                                    </button>
                                </form>

                                <!-- Mark as Shipped -->
                                @if (order.Status == OrderStatus.Pending || order.Status == OrderStatus.Confirmed)
                                {
                                    <form asp-action="MarkAsShipped" asp-route-id="@order.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-warning shadow-sm transition-btn" title="Mark as Shipped">
                                            <i class="bi bi-truck"></i>
                                        </button>
                                    </form>
                                }

                                <!-- Mark as Delivered -->
                                @if (order.Status == OrderStatus.Shipped)
                                {
                                    <form asp-action="MarkAsDelivered" asp-route-id="@order.Id" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-success shadow-sm transition-btn" title="Mark as Delivered">
                                            <i class="bi bi-box-seam"></i>
                                        </button>
                                    </form>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


