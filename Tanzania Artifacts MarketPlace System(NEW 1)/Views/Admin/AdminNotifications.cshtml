@model List<Tanzania_Artifacts_MarketPlace_System_NEW_1_.Models.Notification>

@{
    ViewData["Title"] = "Notifications";
}

<!-- Icons, Animate.css & Custom CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

<style>
    .notification-card {
        transition: all 0.3s ease;
        border-left: 5px solid #0d6efd;
    }

        .notification-card:hover {
            transform: scale(1.02);
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            opacity: 0.97;
        }

    .notification-icon {
        font-size: 2rem;
        color: #0d6efd;
    }

    .notification-time {
        font-size: 0.85rem;
        color: #6c757d;
    }
</style>

<div class="container py-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap">
        <h2 class="fw-bold text-dark mb-3">Notifications</h2>
        <span class="badge bg-primary shadow-sm px-3 py-2">Unread: @Model.Count(n => !n.IsRead)</span>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm animate__animated animate__fadeInDown">
            <i class="bi bi-info-circle-fill me-2"></i> No notifications at the moment.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var notification in Model.OrderByDescending(n => n.CreatedAt))
            {
                <div class="col animate__animated animate__fadeInUp">
                    <div class="card notification-card border-0 rounded-4 shadow-sm">
                        <div class="card-body d-flex gap-3">
                            <i class="bi bi-bell-fill notification-icon"></i>
                            <div>
                                <h5 class="card-title fw-semibold">@notification.Title</h5>
                                <p class="card-text">@notification.Message</p>
                                <p class="notification-time">@notification.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy - hh:mm tt")</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
