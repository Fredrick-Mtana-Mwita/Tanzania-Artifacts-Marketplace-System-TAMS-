@model ApplicationUser
@{
    ViewData["Title"] = "Confirm Delete";
}

<div class="container mt-4">
    <h2 class="text-danger">Confirm Delete</h2>
    <p>Are you sure you want to delete the user <strong>@Model.FirstName @Model.LastName</strong>?</p>

    <form asp-action="DeleteUser" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Yes, Delete</button>
        <a asp-action="ManageUser" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>
