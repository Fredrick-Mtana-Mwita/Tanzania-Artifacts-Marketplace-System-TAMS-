@model IEnumerable<Banner>

@{
    ViewData["Title"] = "Manage Banners";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container py-5 animate__animated animate__fadeIn">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="text-primary fw-bold mb-0">
            <i class="bi bi-image-fill me-2"></i>Banner Management
        </h2>
        <a asp-action="CreateBanner" class="btn btn-warning rounded-pill px-4 shadow-sm">
            <i class="bi bi-plus-circle me-2"></i>Add New Banner
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm rounded-4">
            <i class="bi bi-info-circle-fill me-2"></i>No banners available. Add a new one to get started!
        </div>
    }
    else
    {
        <div class="table-responsive shadow rounded-4">
            <table class="table table-bordered table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th scope="col">Image</th>
                        <th scope="col">Title</th>
                        <th scope="col">Subtitle</th>
                        <th scope="col">Created At</th>
                        <th scope="col" class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var banner in Model)
                    {
                        <tr>
                            <td>
                                <img src="@banner.ImageUrl" alt="Banner Image" style="width: 120px; height: 60px; object-fit: cover;" class="rounded shadow-sm" />
                            </td>
                            <td>@banner.Title</td>
                            <td>@banner.Subtitle</td>
                            <td>@banner.CreatedAt.ToString("MMM dd, yyyy")</td>
                            <td class="text-center">
                                <a asp-action="EditBanner" asp-route-id="@banner.Id" class="btn btn-sm btn-outline-primary me-2 rounded-pill" title="Edit Banner">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>
                                <form asp-action="DeleteBannerConfirmed" asp-route-id="@banner.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this banner?');">
                                    <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill" title="Delete Banner">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
