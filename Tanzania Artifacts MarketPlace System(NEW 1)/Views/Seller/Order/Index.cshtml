@model IEnumerable<Order>
@using System.Security.Claims
@using Tanzania_Artifacts_MarketPlace_System_NEW_1_.Constants

@{
    ViewData["Title"] = "My Orders";
    var sellerId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container py-4">
    <h2 class="fw-bold mb-4 text-center">My Orders</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center shadow-sm">
            <i class="bi bi-info-circle me-2"></i> You have no orders involving your products yet.
        </div>
    }
    else
    {
        <div class="table-responsive shadow rounded overflow-hidden mb-5">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Order ID</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        <tr class="order-row bg-light bg-opacity-75">
                            <td><i class="bi bi-receipt-cutoff me-1"></i> #@order.Id</td>
                            <td>@order.OrderDate.ToLocalTime().ToString("dd MMM yyyy")</td>
                            <td><i class="bi bi-person-circle me-1"></i> @order.User?.FirstName</td>
                            <td><strong class="text-success">TSh @order.TotalAmount.ToString("N0")</strong></td>
                            <td>
                                <span class="badge bg-@GetBadgeClass(order.Status)">@order.Status</span>
                            </td>
                            <td>
                                <button class="btn btn-sm btn-outline-secondary shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#items-@order.Id">
                                    <i class="bi bi-caret-down-fill"></i>
                                </button>
                            </td>
                        </tr>
                        <tr class="collapse bg-white" id="items-@order.Id">
                            <td colspan="6" class="p-3">
                                <div class="row g-3">
                                    @foreach (var item in order.Items.Where(i => i.Product.SellerId == sellerId))
                                    {
                                        <div class="col-md-6 col-lg-4">
                                            <div class="card border-0 shadow-sm h-100">
                                                <div class="card-body">
                                                    <h5 class="card-title text-primary">@item.Product.Name</h5>
                                                    <p class="card-text small text-muted mb-1">Qty: @item.Quantity</p>
                                                    <p class="card-text small">Unit Price: <strong>TSh @item.UnitPrice.ToString("N0")</strong></p>
                                                    <p class="card-text">Subtotal: <strong>TSh @(item.Quantity * item.UnitPrice).ToString("N0")</strong></p>
                                                    <p class="card-text">
                                                        Status:
                                                        <span class="badge @(item.SellerStatus == SellerOrderStatus.Shipped ? "bg-success" : "bg-warning")">
                                                            @item.SellerStatus
                                                            @if (item.SellerStatus == SellerOrderStatus.Shipped)
                                                            {
                                                                <i class="bi bi-truck ms-1"></i>
                                                            }
                                                        </span>
                                                    </p>
                                                    @if (item.SellerStatus == SellerOrderStatus.Shipped)
                                                    {
                                                        <p class="text-muted small mb-0">
                                                            Shipped on: @item.SellerShippedDate.ToLocalTime().ToString("g")
                                                        </p>
                                                    }

                                                    @if (item.SellerStatus == SellerOrderStatus.Pending)
                                                    {
                                                        <form asp-action="MarkItemAsShipped" method="post" class="d-inline">
                                                            <input type="hidden" name="itemId" value="@item.Id" />
                                                            <button type="submit" class="btn btn-sm btn-outline-primary shadow-sm">
                                                                <i class="bi bi-truck"></i> Mark as Shipped
                                                            </button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <button class="btn btn-sm btn-outline-secondary shadow-sm" disabled>
                                                            Already Shipped
                                                        </button>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

@section Scripts {
    <script>
        const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        tooltips.forEach(el => new bootstrap.Tooltip(el));
    </script>
}

@functions {
    string GetBadgeClass(OrderStatus status) => status switch
    {
        OrderStatus.Ordered => "warning",
        OrderStatus.Shipped => "info",
        OrderStatus.Delivered => "success",
        OrderStatus.Cancelled => "danger",
        _ => "secondary"
    };
}
