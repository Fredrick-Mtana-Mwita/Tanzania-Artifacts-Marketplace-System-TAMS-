@* Views/Seller/Product/Index.cshtml *@
@model IEnumerable<Product>
@{
    ViewData["Title"] = "My Products";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold">My Products</h2>
        <a asp-action="Create" class="btn btn-primary shadow rounded-pill">
            <i class="bi bi-plus-circle"></i> Add New Product
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You have not added any products yet.</div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0 position-relative">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@item.Name</h5>
                            <p class="card-text">@item.Description?.Substring(0, Math.Min(100, item.Description.Length))...</p>
                            <p class="text-muted small">Price: <strong class="text-dark">TSh @item.Price.ToString("N0")</strong></p>
                            <p class="text-muted small">Quantity: @item.Quantity</p>
                        </div>
                        <div class="card-footer bg-white d-flex justify-content-between">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </div>
                        @if (!item.IsApproved)
                        {
                            <span class="badge bg-warning position-absolute top-0 end-0 m-2">Pending</span>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div>