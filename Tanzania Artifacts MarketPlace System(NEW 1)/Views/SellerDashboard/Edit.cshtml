@using Tanzania_Artifacts_MarketPlace_System_NEW_1_.Seller.SellerViewModel
@model SellerProductVM
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container py-4">
    <h2 class="fw-bold mb-4 text-center">Edit Product</h2>

    <form asp-action="Edit" method="post" enctype="multipart/form-data" class="card p-4 shadow-sm">
        <input type="hidden" asp-for="ProductId" />

        <div class="mb-3">
            <label asp-for="ProductName" class="form-label"></label>
            <input asp-for="ProductName" class="form-control" />
            <span asp-validation-for="ProductName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Current Image</label><br />
            <img src="@Model.ExistingImagePath" width="100" class="img-thumbnail" />
        </div>

        <div class="mb-3">
            <label asp-for="Image" class="form-label"></label>
            <input asp-for="Image" type="file" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Update Product</button>
        <a asp-action="MyProducts" class="btn btn-secondary ms-2">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
