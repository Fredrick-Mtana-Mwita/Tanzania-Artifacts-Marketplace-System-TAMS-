@model List<Tanzania_Artifacts_MarketPlace_System_NEW_1_.Models.WishlistItem>
@{
    ViewData["Title"] = "My Wishlist";
}


<div class="container py-4">
    <h2 class="wishlist-title mb-4 text-center">
        <i class="bi bi-heart-fill"></i> My Wishlist
    </h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center animated fadeIn">
            <i class="bi bi-emoji-frown fs-3 text-warning"></i> <br />
            Your wishlist is empty.
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-2 row-cols-lg-3 g-4 animate__animated animate__fadeInUp">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card wishlist-card border-0 shadow-sm h-100">
                        <img src="~/images/@item.Product.ProductImage" class="card-img-top wishlist-img" alt="@item.Product.Name" />
                        <div class="wishlist-body">
                            <h5>@item.Product.Name</h5>
                            <p class="wishlist-description">
                                @item.Product.Description?.Substring(0, Math.Min(80, item.Product.Description.Length))...
                            </p>
                            <p class="wishlist-price">
                                <i class="bi bi-cash-coin"></i> TSh @item.Product.Price.ToString("N0")
                            </p>
                            <form asp-action="Remove" method="post" class="mt-3">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                <button class="btn btn-outline-warning wishlist-remove-btn w-100 rounded-pill" type="submit">
                                    <i class="bi bi-x-circle-fill me-1"></i> Remove from Wishlist
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"></script>
}
