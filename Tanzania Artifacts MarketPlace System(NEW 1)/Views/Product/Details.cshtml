@model Tanzania_Artifacts_MarketPlace_System_NEW_1_.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-5">
    <div class="card shadow p-4">
        <h2 class="text-center">@Model.Name</h2>
        <hr />

        <div class="row">
            <!-- Left Column: Product Image and Details -->
            <div class="col-md-6">
                <img src="~/images/@Model.ProductImage"
                     alt="@Model.Name"
                     class="img-thumbnail float-start me-3 mb-3"
                     style="max-width: 200px; height: auto;" />

                <div>
                    <p><strong>Description:</strong> @Model.Description</p>
                    <p><strong>Price:</strong> @("TSh " + Model.Price.ToString("N2"))</p>
                    <p>
                        <strong>In Stock:</strong>
                        @if (Model.InStock)
                        {
                            <span class="text-success">Yes (@Model.StockQuantity available)</span>
                        }
                        else
                        {
                            <span class="text-danger">Out of stock</span>
                        }
                    </p>

                    <!-- Add to Cart Button -->
                    @if (Model.InStock)
                    {
                        <form asp-controller="Cart" asp-action="Add" method="post">
                            <input type="hidden" name="productId" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary">Add to Cart</button>
                        </form>
                    }
                </div>
            </div>

            <!-- Right Column: Product History -->
            <div class="col-md-6">
                <h4>Product History</h4>
                <div style="max-height: 300px; overflow-y: auto;">
                    <p>@Model.ProductHistory</p>
                </div>
            </div>
        </div>

        <div class="mt-4">
            <a href="@Url.Action("Index", "Product")" class="btn btn-primary">← Back to Products</a>
        </div>
    </div>
</div>
