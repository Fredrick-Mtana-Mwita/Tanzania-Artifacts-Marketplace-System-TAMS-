@{
    var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
}

<style>
    .sidebar {
        background: linear-gradient(135deg, #1f1c2c, #928DAB); /* Elegant gradient */
        min-height: 100vh;
        width: 250px;
    }

        .sidebar .nav-link {
            color: #f1f1f1 !important;
            transition: all 0.3s ease;
        }

            .sidebar .nav-link:hover {
                background-color: rgba(255, 255, 255, 0.1);
                border-radius: 8px;
                padding-left: 18px;
            }

    .active-admin-link {
        background-color: rgba(255, 255, 255, 0.2) !important;
        border-radius: 8px;
        font-weight: bold;
        color: #fff !important;
    }

    .sidebar .btn-outline-light {
        border-color: #f8f9fa;
        color: #f8f9fa;
    }

        .sidebar .btn-outline-light:hover {
            background-color: #f8f9fa;
            color: #1f1c2c;
        }
</style>

<nav id="sidebar" class="sidebar p-4 shadow-lg text-white rounded-end-4">
    <!-- User Profile -->
    <div class="user-profile d-flex align-items-center mb-4">
        <img src="https://i.pravatar.cc/48?img=15" alt="Seller Avatar" class="rounded-circle me-3 shadow" />
        <div>
            <div class="fw-bold">Fred Mwita</div>
            <small class="text-light opacity-75">System Admin</small>
        </div>
    </div>

    <h5 class="fw-semibold mb-4 d-flex align-items-center">
        <i class="bi bi-shop me-2 fs-4"></i> Admin Menu
    </h5>

    <ul class="nav flex-column">
        <li class="nav-item mb-2">
            <a class="nav-link @(currentAction == "AdminDashboard" ? "active-admin-link" : "")"
               asp-controller="Admin" asp-action="AdminDashboard">
                <i class="bi bi-house-door me-2"></i> Admin Dashboard
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link @(currentAction == "CreateSeller" ? "active-admin-link" : "")"
               asp-controller="SellerDashboard" asp-action="CreateUser">
                <i class="bi bi-plus-circle me-2"></i> Add Seller
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link @(currentAction == "Index" ? "active-admin-link" : "")"
               asp-controller="Product" asp-action="Index">
                <i class="bi bi-box-seam me-2"></i> Products
            </a>
        </li>
        <li class="nav-item mb-2">
            <a class="nav-link @(currentAction == "AdminOrders" ? "active-admin-link" : "")"
               asp-controller="Admin" asp-action="AdminOrders">
                <i class="bi bi-receipt-cutoff me-2"></i>  Orders
            </a>
        </li>
        <li class="nav-item mt-4">
            <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-light w-100 d-flex align-items-center justify-content-center">
                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                </button>
            </form>
        </li>
    </ul>
</nav>




