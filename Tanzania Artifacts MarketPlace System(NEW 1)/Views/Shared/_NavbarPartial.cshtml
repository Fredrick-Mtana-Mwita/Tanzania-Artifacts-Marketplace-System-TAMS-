@* /Views/Shared/_NavbarPartial.cshtml *@
@using Microsoft.AspNetCore.Mvc.Rendering

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom sticky-top" style="z-index: 1030;">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")" style="font-weight: 700; font-size: 1.8rem; letter-spacing: 0.1rem;">
            T<span class="text-warning">A</span>MS
        </a>

        <!-- Toggle button for mobile -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar content -->
        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Product")">Shop</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("About", "Home")">About</a>
                </li>
            </ul>

            <!-- Search form -->
            <form class="d-flex me-3" method="get" action="@Url.Action("Index", "Product")">
                <input class="form-control me-2 rounded-start" type="search" name="searchTerm" placeholder="Search products..."
                       aria-label="Search products" value="@Context.Request.Query["searchTerm"]" />
                <button class="btn btn-warning rounded-end" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            <!-- Cart icon -->
            <a href="@Url.Action("AddToCart", "Cart")" class="btn btn-outline-dark position-relative me-3" aria-label="Shopping cart">
                <i class="bi bi-cart-fill fs-4"></i>
                <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger" style="font-size:0.7rem;">
                    @(ViewBag.CartCount ?? 0)
                    <span class="visually-hidden">items in cart</span>
                </span>
            </a>

            <!-- Login / Register -->
            @await Html.PartialAsync("_LoginPartial")
        </div>
    </div>
</nav>
