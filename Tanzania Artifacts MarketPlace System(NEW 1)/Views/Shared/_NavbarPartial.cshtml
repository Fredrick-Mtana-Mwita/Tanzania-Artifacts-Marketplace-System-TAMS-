@* /Views/Shared/_NavbarPartial.cshtml *@
@using Microsoft.AspNetCore.Mvc.Rendering

<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm border-bottom sticky-top" style="z-index: 1030;">
    <div class="container">
        <!-- Logo -->
        <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")"
           style="font-weight: 700; font-size: 1.8rem; letter-spacing: 0.1rem;">
            <span class="text-dark">T</span>
            <span class="text-warning fw-bold animate__animated animate__pulse animate__infinite" style="text-shadow: 0 0 5px rgba(255,193,7,0.7);">
                A
            </span>
            <span class="text-dark">MS</span>
        </a>


        <!-- Mobile toggle -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain"
                aria-controls="navbarMain" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <!-- Navbar links -->
        <div class="collapse navbar-collapse" id="navbarMain">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                <li class="nav-item">
                    <a class="nav-link active" href="@Url.Action("Index", "Home")">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="@Url.Action("Index", "Product")">Shop</a>
                </li>
               
                <!-- Become a Seller button (only for logged-in users who are not sellers) -->
                @using Microsoft.AspNetCore.Identity
                @inject SignInManager<ApplicationUser> SignInManager
                @inject UserManager<ApplicationUser> UserManager

                @if (SignInManager.IsSignedIn(User) && !User.IsInRole("Seller"))
                {
                   <li class="nav-item">
                        <a asp-area="Seller" asp-controller="SellerOnboarding" asp-action="Start" class="nav-link"> Sell</a>
                   </li>
                }
            </ul>

            <!-- Search -->
            <form class="d-flex me-3" method="get" action="@Url.Action("Index", "Product")">
                <input class="form-control me-2 rounded-start" type="search" name="searchTerm" placeholder="Search products..."
                       aria-label="Search" value="@Context.Request.Query["searchTerm"]" />
                <button class="btn btn-warning rounded-end" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>

            <!-- Cart -->
            @await Component.InvokeAsync("CartCount")

           

            <!-- Login / Register -->
            @await Html.PartialAsync("_LoginPartial")

        </div>
    </div>
</nav>
