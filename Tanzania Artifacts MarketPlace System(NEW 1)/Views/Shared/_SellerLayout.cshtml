<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Seller Panel</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
</head>
<body>
    <div class="d-flex">
        <div class="sidebar p-3" id="sellerSidebar">
            <h4 class="mb-4"><i class="bi bi-shop-window"></i> Seller Panel</h4>
            <a asp-area="Seller" asp-controller="SellerDashboard" asp-action="SellerDashboard"><i class="bi bi-speedometer2 me-2"></i> Dashboard</a>            <a asp-area="Seller" asp-action="Details" asp-controller="SellerProfile"><i class="bi bi-person-circle me-2"></i> Profile</a>

            <a asp-area="Seller" asp-action="Index" asp-controller="Product"><i class="bi bi-box-seam me-2"></i> My Products</a>
            <a asp-area="Seller" asp-action="Create" asp-controller="Product"><i class="bi bi-plus-square me-2"></i> Add Product</a>
            <a asp-area="Seller" asp-action="Index" asp-controller="Order"><i class="bi bi-receipt-cutoff me-2"></i> Orders</a>
            <a asp-area="Identity" asp-page="/Account/Logout"><i class="bi bi-box-arrow-right me-2"></i> Logout</a>
        </div>

        <div class="flex-grow-1">
            <div class="topbar">
                <button class="btn btn-outline-secondary d-md-none" onclick="toggleSidebar()">
                    <i class="bi bi-list"></i>
                </button>
                <div class="seller-info">
                    Welcome, @User.Identity?.Name
                </div>
            </div>

            <div class="main-content">
                @RenderBody()
            </div>
        </div>
    </div>

    <!-- ✅ Toast Container -->
    <div id="toastContainer" class="position-fixed top-0 end-0 p-3" style="z-index: 1055;"></div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/7.0.5/signalr.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function toggleSidebar() {
            document.getElementById("sellerSidebar").classList.toggle("active");
        }

        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/notificationHub")
            .build();

        connection.on("ReceiveNotification", function (title, message) {
            const toastHtml = `
                <div class="toast align-items-center text-white bg-success border-0 show fade mb-2" role="alert" style="min-width: 300px;">
                    <div class="d-flex">
                        <div class="toast-body">
                            <strong>${title}</strong><br>${message}
                        </div>
                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                    </div>
                </div>`;
            const container = document.getElementById("toastContainer");
            container.innerHTML = toastHtml;
            new bootstrap.Toast(container.querySelector('.toast')).show();
        });

        connection.start().catch(err => console.error(err.toString()));
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
