@model IEnumerable<Tanzania_Artifacts_MarketPlace_System_NEW_1_.Models.Product>

@if (Model != null && Model.Any())
{
    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3">
                <div class="card product-card border-0 shadow-sm rounded-4 h-100 hover-effect transition-all">
                    <div class="position-relative overflow-hidden rounded-top-4">
                        <img src="~/images/@(string.IsNullOrEmpty(product.ProductImage) ? "No Image.jpg" : product.ProductImage)"
                             class="card-img-top product-image"
                             alt="@product.Name" />
                        <div class="badge bg-warning text-dark position-absolute top-0 end-0 m-2 fw-semibold">
                            <i class="bi bi-currency-exchange"></i> TSh @product.Price.ToString("N0")
                        </div>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-dark fw-bold text-truncate">@product.Name</h6>
                        <p class="card-text small text-muted text-wrap overflow-hidden" style="max-height: 3.2em;">
                            @product.Description
                        </p>
                        <a href="@Url.Action("Details", "Product", new { id = product.Id })"
                           class="btn btn-outline-warning mt-auto w-100 transition-all">
                            <i class="bi bi-eye-fill me-1"></i> View Details
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="alert alert-warning text-center">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>No products found.
    </div>
}
