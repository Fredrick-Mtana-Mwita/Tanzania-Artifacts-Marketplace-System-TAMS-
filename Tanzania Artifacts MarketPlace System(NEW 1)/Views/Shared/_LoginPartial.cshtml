@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    var user = await UserManager.GetUserAsync(User);
    var firstName = user?.FirstName ?? "User";
    var profileImage = user?.ProfileImage ?? "/images/profileImages/default-user.jpg";

    var roles = await UserManager.GetRolesAsync(user!);
    var roleDisplay = roles.FirstOrDefault() ?? "User";

    <div class="dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center gap-2" href="#" role="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
            <img src="@profileImage" alt="Profile"
                 class="rounded-circle"
                 style="width: 32px; height: 32px; object-fit: cover;" />
            <div class="d-flex flex-column align-items-start">
                <span class="fw-semibold" style="color: var(--bs-body-color);">Hi, @firstName</span>
                <small class="text-muted" style="font-size: 0.75rem;">@roleDisplay</small>
            </div>
        </a>
        <ul class="dropdown-menu dropdown-menu-end shadow-sm border-0 mt-2" aria-labelledby="userDropdown">
            <li>
                <a class="dropdown-item" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <i class="bi bi-person-circle me-2"></i> Manage Account
                </a>
            </li>
            <li>
                <form asp-area="Identity" asp-page="/Account/Logout"
                      asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })"
                      method="post" class="d-inline">
                    <button type="submit" class="dropdown-item">
                        <i class="bi bi-box-arrow-right me-2"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>
}
else
{
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Register" style="color: var(--bs-body-color);">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login" style="color: var(--bs-body-color);">Login</a>
        </li>
    </ul>
}
