@model HomePageViewModel
@{
    ViewData["Title"] = "Welcome to Tanzania Artifacts Marketplace";
    int i = 0;
}

<!-- Hero Carousel -->
<div id="heroCarousel" class="carousel slide mb-4" data-bs-ride="carousel" data-aos="zoom-in">
    <div class="carousel-item active">
        <img src="~/images/carousel-1.jpg" class="d-block w-100 img-fluid" alt="Artifact 1" style="object-fit: cover; height: 500px;">
        <div class="carousel-caption">
            <h3>Explore Unique Tanzanian Artifacts</h3>
            <p>Handcrafted by local artisans. Shop with culture.</p>
        </div>
    </div>

    <div class="carousel-item">
        <img src="~/images/MAKONDE .jpg" class="d-block w-100 img-fluid" alt="Artifact 2" style="object-fit: cover; height: 500px;">
        <div class="carousel-caption">
            <h3>Limited Time Offers</h3>
            <p>Get discounts on exclusive collections.</p>
        </div>
    </div>    <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon bg-dark rounded-circle"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon bg-dark rounded-circle"></span>
    </button>
</div>
<!-- Categories Section -->
<section class="mb-5" data-aos="fade-up">
    <div class="container text-center">
        <h2 class="mb-4">Explore by Categories</h2>
        <div class="row g-4 justify-content-center">
            <div class="col-md-3 col-6" data-aos="zoom-in-up">
                <div class="card shadow-sm border-0 category-card h-100 hover-effect transition-all">
                    <img src="~/images/category1.jpg" class="card-img-top" alt="Jewelry">
                    <div class="card-body">
                        <h5 class="card-title">Jewelry</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6" data-aos="zoom-in-up" data-aos-delay="100">
                <div class="card shadow-sm border-0 category-card h-100 hover-effect transition-all">
                    <img src="~/images/category2.jpg" class="card-img-top" alt="Textiles">
                    <div class="card-body">
                        <h5 class="card-title">Textiles</h5>
                    </div>
                </div>
            </div>
            <div class="col-md-3 col-6" data-aos="zoom-in-up" data-aos-delay="200">
                <div class="card shadow-sm border-0 category-card h-100 hover-effect transition-all">
                    <img src="~/images/category3.jpg" class="card-img-top" alt="Wood Carvings">
                    <div class="card-body">
                        <h5 class="card-title">Wood Carvings</h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products -->
<section class="mb-5" data-aos="fade-up">
    <div class="container">
        <h2 class="mb-4 text-center">Featured Artifacts</h2>
        <div class="row g-4">
            @foreach (var product in Model.FeaturedProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-12" data-aos="fade-up" data-aos-delay="@(i * 100)">
                    <div class="card product-card shadow-lg hover-effect h-100 transition-all">
                        <img src="~/@product.ProductImage" class="card-img-top" alt="@product.Name" style="object-fit: cover; height: 200px;">
                        <div class="card-body text-center">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text text-muted">TSh @product.Price.ToString("N0")</p>
                            <a asp-action="Details" asp-controller="Products" asp-route-id="@product.Id" class="btn btn-outline-dark shadow-sm">View</a>
                        </div>
                    </div>
                </div>
                i++;
            }
        </div>
    </div>
</section>

<!-- Trending Products -->
@{
    i = 0;
}
<section class="mb-5" data-aos="fade-up">
    <div class="container">
        <h2 class="mb-4 text-center">Trending Now</h2>
        <div class="row g-4">
            @foreach (var trending in Model.TrendingProducts)
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-12" data-aos="zoom-in" data-aos-delay="@(i * 100)">
                    <div class="card shadow-sm h-100 hover-effect transition-all">
                        <img src="~/@trending.ProductImage" class="card-img-top" style="object-fit: cover; height: 200px;" alt="@trending.Name" />
                        <div class="card-body text-center">
                            <h5 class="card-title">@trending.Name</h5>
                            <p class="text-muted">TSh @trending.Price.ToString("N0")</p>
                            <a asp-action="Details" asp-controller="Products" asp-route-id="@trending.Id" class="btn btn-outline-warning shadow-sm">View</a>
                        </div>
                    </div>
                </div>
                i++;
            }
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bg-light py-5 text-center" data-aos="fade-up">
    <div class="container">
        <h3 class="mb-3">Are You a Seller or a Buyer?</h3>
        <p class="mb-4">Join us to showcase or discover unique Tanzanian artifacts!</p>
        <div>
            <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-dark me-2  text-warning shadow">Register Now</a>
            <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-dark text-warning shadow">Login</a>
        </div>
    </div>
</section>

<!-- Testimonials -->
<section class="bg-white py-5" data-aos="fade-up">
    <div class="container text-center">
        <h2 class="mb-4">What Our Users Say</h2>
        <div class="row g-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="shadow p-4 rounded bg-light h-100">
                    <p>"Amazing variety and fast delivery. I found the perfect wood carving for my office!"</p>
                    <h6 class="mt-3 mb-0">— Fatma M.</h6>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="shadow p-4 rounded bg-light h-100">
                    <p>"This platform helped me reach international buyers. Proudly showcasing Tanzanian art!"</p>
                    <h6 class="mt-3 mb-0">— Joseph K. (Seller)</h6>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="shadow p-4 rounded bg-light h-100">
                    <p>"Secure payments and beautiful products. I’ll definitely shop again."</p>
                    <h6 class="mt-3 mb-0">— Asha B.</h6>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter py-5 bg-dark text-white text-center shadow-lg" data-aos="fade-up">
    <div class="container">
        <h3 class="mb-3">Stay Connected</h3>
        <p class="mb-4">Subscribe to get the latest on new arrivals and exclusive offers.</p>
        <form class="row justify-content-center g-2">
            <div class="col-md-6 col-sm-8">
                <input type="email" class="form-control" placeholder="Enter your email">
            </div>
            <div class="col-auto">
                <button class="btn btn-warning shadow" type="submit">Subscribe</button>
            </div>
        </form>
    </div>
</section>

<!-- Spacer before footer -->
<div class="mb-5"></div>
