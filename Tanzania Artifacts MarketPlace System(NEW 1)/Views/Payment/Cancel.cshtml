@{
    ViewData["Title"] = "Payment Cancelled";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-5">
    <div class="card shadow-lg rounded-4 p-5 text-center animate__animated animate__shakeX">
        <div class="mb-4">
            <i class="bi bi-x-circle-fill text-danger" style="font-size: 4rem;"></i>
            <h2 class="fw-bold mt-3">Payment Cancelled</h2>
            <p class="text-muted">@ViewBag.Message ?? "You canceled the PayPal transaction."</p>
        </div>

        <a asp-controller="Cart" asp-action="Index" class="btn btn-outline-secondary shadow-sm">
            <i class="bi bi-cart4"></i> Back to Cart
        </a>
    </div>
</div>
