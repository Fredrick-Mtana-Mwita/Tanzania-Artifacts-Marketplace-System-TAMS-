@model Tanzania_Artifacts_MarketPlace_System_NEW_1_.Models.Cart

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2 class="text-center">Shopping Cart</h2>
    <hr />

    @if (Model.Items.Any())
    {
        <table class="table table-bordered table-striped table-hover table-responsive">
            <thead class="table-light">
                <tr>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Quantity</th>
                    <th>Unit Price</th>
                    <th>Subtotal</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <img src="~/images/@(item.Product.Images.FirstOrDefault()?.Url ?? "no-image.png")" alt="@item.Product.Name" style="width: 80px; height: auto;" />
                        </td>
                        <td>@item.Product.Name</td>
                        <td class="text-center">
                            <div class="btn-group" role="group">
                                <form asp-action="Add" asp-controller="Cart" method="post">
                                    <input type="hidden" name="productId" value="@item.Product.Id" />
                                    <input type="hidden" name="quantity" value="1" />
                                    <button type="submit" class="btn btn-sm btn-success">+</button>
                                </form>

                                <span class="mx-2 align-self-center">@item.Quantity</span>

                                <form asp-action="Decrease" asp-controller="Cart" method="post">
                                    <input type="hidden" name="productId" value="@item.Product.Id" />
                                    <button type="submit" class="btn btn-sm btn-warning">-</button>
                                </form>
                            </div>
                        </td>
                        <td>@("TSh " + item.Product.Price.ToString("N2"))</td>
                        <td>@("TSh " + (item.Product.Price * item.Quantity).ToString("N2"))</td>
                        <td>
                            <a asp-action="Remove" asp-route-productId="@item.Product.Id" class="btn btn-sm btn-danger">Remove</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Action Buttons & Total -->
        <div class="d-flex justify-content-between align-items-center mt-4">
            <a href="@Url.Action("Index", "Product")" class="btn btn-outline-warning">← Back to Products</a>

            <div>
                <h4 class="d-inline-block me-3">
                    Total: @("TSh " + Model.Items.Sum(i => i.Product.Price * i.Quantity).ToString("N2"))
                </h4>
                <form method="post" asp-controller="Order" asp-action="CreateOrder">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-warning">Checkout</button>
                </form>

            </div>
        </div>
    }
    else
    {
        <p>Your cart is empty.</p>
        <a href="@Url.Action("Index", "Product")" class="btn btn-outline-warning">← Continue Shopping</a>
    }
</div>
