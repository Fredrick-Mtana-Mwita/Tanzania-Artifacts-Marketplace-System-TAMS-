@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "Confirm Email";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0">
                <div class="card-body text-center p-5">

                    @if (Model.StatusMessage != null && Model.StatusMessage.Contains("Thank you for confirming"))
                    {
                        <!-- Success Icon -->
                        <div class="mb-4">
                            <svg xmlns="http://www.w3.org/2000/svg" width="64" height="64" fill="#28a745" class="bi bi-check-circle-fill" viewBox="0 0 16 16">
                                <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.97 10.03a.75.75 0 0 0 1.08 0l3.992-3.992a.75.75 0 0 0-1.06-1.06L7.5 8.439 6.03 6.97a.75.75 0 0 0-1.06 1.06l1.999 2z" />
                            </svg>
                        </div>

                        <h2 class="text-success">Email Confirmed!</h2>
                        <p class="text-muted mb-4">@Model.StatusMessage</p>

                        <a href="/Identity/Account/Login" class="btn btn-warning btn-lg rounded-pill shadow-sm">
                            Go to Login
                        </a>
                    }
                    else
                    {
                        <!-- Error/Fallback -->
                        <h2 class="text-danger">Something went wrong</h2>
                        <p class="text-muted mb-4">@Model.StatusMessage</p>

                        <a asp-page="/Account/ResendEmailConfirmation" class="btn btn-outline-warning rounded-pill mt-3">
                            Resend Confirmation Email
                        </a>

                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary rounded-pill mt-2">
                            Back to Home
                        </a>

                    }

                </div>
            </div>
        </div>
    </div>
</div>
