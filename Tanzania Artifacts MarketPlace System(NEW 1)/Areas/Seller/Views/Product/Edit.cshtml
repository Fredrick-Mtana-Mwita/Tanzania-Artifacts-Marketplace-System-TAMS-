@model Tanzania_Artifacts_MarketPlace_System_NEW_1_.Areas.Seller.SellerViewModel.SellerProductVM

@{
    ViewData["Title"] = "Edit Product";
}

<h2 class="text-primary fw-bold mb-4">Edit Product</h2>

<form asp-action="Edit" enctype="multipart/form-data" class="row g-3 needs-validation" novalidate>
    <input type="hidden" asp-for="ProductId" />

    <div class="col-md-6">
        <label asp-for="ProductName" class="form-label">Product Name</label>
        <input asp-for="ProductName" class="form-control" />
        <span asp-validation-for="ProductName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Price" class="form-label">Price (TSh)</label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="Description" class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="4"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="col-12">
        <label asp-for="ProductHistory" class="form-label">Product History</label>
        <textarea asp-for="ProductHistory" class="form-control" rows="3"></textarea>
    </div>

    <div class="col-md-4">
        <label asp-for="StockQuantity" class="form-label">Stock Quantity</label>
        <input asp-for="StockQuantity" class="form-control" />
    </div>

    <div class="col-md-4 d-flex align-items-end">
        <div class="form-check">
            <input asp-for="IsFeatured" class="form-check-input" />
            <label asp-for="IsFeatured" class="form-check-label">Featured Product</label>
        </div>
    </div>

    <div class="col-md-4">
        <label asp-for="Image" class="form-label">Change Product Image</label>
        <input asp-for="Image" type="file" class="form-control" accept="image/*" />
        @if (!string.IsNullOrEmpty(Model.ExistingImagePath))
        {
            <div class="mt-2">
                <p class="mb-1">Current Image:</p>
                <img src="@Model.ExistingImagePath" alt="Current Product Image" class="img-thumbnail" style="max-height: 150px;" />
            </div>
        }
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save me-1"></i> Update Product
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
