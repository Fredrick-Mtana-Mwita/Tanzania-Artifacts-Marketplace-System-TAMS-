@model Tanzania_Artifacts_MarketPlace_System_NEW_1_.Models.Product

@{
    var isEdit = (ViewContext.RouteData.Values["action"]?.ToString() ?? "") == "Edit";
    ViewData["Title"] = isEdit ? "Edit Product" : "Add Product";
}

<div class="container py-4">
    <h2 class="fw-bold">@ViewData["Title"]</h2>

    <form asp-action="@ViewData["FormAction"]"
          method="post"
          enctype="multipart/form-data"
          class="mt-3 needs-validation"
          novalidate>

        @if (isEdit)
        {
            <input type="hidden" asp-for="Id" />
        }

        <!-- Product Name -->
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control shadow-sm" placeholder="Product Name" required />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- Description -->
        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" class="form-control shadow-sm" rows="4" placeholder="Product Description" required></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!-- Product History -->
        <div class="mb-3">
            <label asp-for="ProductHistory" class="form-label"></label>
            <textarea asp-for="ProductHistory" class="form-control shadow-sm" rows="3" placeholder="Product History"></textarea>
        </div>

        <div class="row">
            <!-- Price -->
            <div class="col-md-4 mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control shadow-sm" placeholder="Set price" required />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <!-- Quantity -->
            <div class="col-md-4 mb-3">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control shadow-sm" placeholder="Stock quantity" required />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <!-- Featured -->
            <div class="col-md-4 mb-3">
                <label asp-for="IsFeatured" class="form-label"></label>
                <select asp-for="IsFeatured" class="form-select shadow-sm">
                    <option value="" disabled selected hidden>Select if featured</option>
                    <option value="false">No</option>
                    <option value="true">Yes</option>
                </select>
                <span asp-validation-for="IsFeatured" class="text-danger"></span>
            </div>
        </div>

        <!-- ✅ Image Upload -->
        <div class="mb-4">
            <label class="form-label fw-semibold">Upload Images (Max 5)</label>
            <input type="file" name="images" class="form-control shadow-sm" multiple accept="image/*" onchange="previewImages(this)">
            <div id="preview" class="mt-3 d-flex flex-wrap gap-2"></div>
        </div>

        <!-- ✅ Existing Images (Edit mode only) -->
        @if (isEdit && Model.Images != null && Model.Images.Any())
        {
            <div class="mb-3">
                <label class="form-label">Current Images</label>
                <div class="d-flex flex-wrap gap-2">
                    @foreach (var img in Model.Images)
                    {
                        <div class="border p-1 rounded shadow-sm">
                            <img src="@img.Url" alt="@img.AltText" style="height: 100px; object-fit: cover;" class="rounded" />
                        </div>
                    }
                </div>
            </div>
        }

        <!-- ✅ Buttons -->
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                <i class="bi bi-arrow-left"></i> Back
            </a>
            <button type="submit" class="btn btn-success shadow-sm">
                <i class="bi bi-check-circle"></i> Save
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <script>
        function previewImages(input) {
            const preview = document.getElementById('preview');
            preview.innerHTML = '';

            const files = input.files;
            for (const file of files) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    const img = document.createElement("img");
                    img.src = e.target.result;
                    img.classList.add("rounded", "shadow", "border");
                    img.style.height = "100px";
                    img.style.objectFit = "cover";
                    img.style.opacity = "0.9";
                    img.style.transition = "transform 0.3s ease";
                    img.onmouseover = () => img.style.transform = "scale(1.05)";
                    img.onmouseout = () => img.style.transform = "scale(1)";
                    preview.appendChild(img);
                };
                reader.readAsDataURL(file);
            }
        }
    </script>
}
