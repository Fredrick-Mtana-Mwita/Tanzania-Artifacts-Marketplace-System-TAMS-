@model Tanzania_Artifacts_MarketPlace_System_NEW_1_.Models.SellerProfile

@{
    ViewData["Title"] = "Seller Profile Details";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5 animate__animated animate__fadeIn">
    <div class="card shadow-lg border-0 rounded-4 bg-white">
        <div class="card-header bg-primary text-white rounded-top-4 text-center">
            <h3 class="mb-0 fw-bold"><i class="bi bi-person-badge"></i> Seller Profile</h3>
        </div>

        <div class="card-body">
            <div class="row g-4">

                <!-- Store Banner -->
                @if (!string.IsNullOrEmpty(Model.StoreBannerPath))
                {
                    <div class="col-12 text-center">
                        <img src="@Model.StoreBannerPath" alt="Store Banner" class="img-fluid rounded-3 shadow-sm" style="max-height: 200px;" />
                    </div>
                }

                <!-- Logo + Basic Info -->
                <div class="col-md-3 text-center">
                    @if (!string.IsNullOrEmpty(Model.StoreLogoPath))
                    {
                        <img src="@Model.StoreLogoPath" alt="Store Logo" class="rounded-circle shadow-sm border" style="width: 120px; height: 120px; object-fit: cover;" />
                    }
                    else
                    {
                        <i class="bi bi-person-circle fs-1 text-muted"></i>
                    }
                </div>

                <div class="col-md-9">
                    <h4 class="fw-bold text-dark">@Model.BusinessName</h4>
                    <p class="text-muted mb-1"><i class="bi bi-envelope"></i> @Model.ContactEmail</p>
                    <p class="text-muted"><i class="bi bi-telephone"></i> @Model.PhoneNumber</p>

                    <div class="mt-3">
                        <h6 class="text-secondary"><i class="bi bi-building"></i> Store Description:</h6>
                        <p class="text-body">@Model.StoreDescription</p>
                    </div>
                </div>

                <div class="col-md-6">
                    <h6 class="text-secondary"><i class="bi bi-bank"></i> Bank Account Info:</h6>
                    <p class="text-body">@Model.BankAccountInfo</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-secondary"><i class="bi bi-receipt"></i> Tax ID:</h6>
                    <p class="text-body">@Model.TaxId</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-secondary"><i class="bi bi-calendar-plus"></i> Joined:</h6>
                    <p class="text-body">@Model.CreatedAt.ToLocalTime().ToString("MMMM dd, yyyy")</p>
                </div>

                <div class="col-md-6">
                    <h6 class="text-secondary"><i class="bi bi-check-circle"></i> Approved Status:</h6>
                    <span class="badge @(Model.IsApproved ? "bg-success" : "bg-warning text-dark")">
                        @(Model.IsApproved ? "Approved" : "Pending Approval")
                    </span>
                </div>

                <div class="text-center mt-4">
                    <a asp-action="Edit" class="btn btn-outline-primary btn-lg px-4 rounded-pill shadow-sm hover-shadow">
                        <i class="bi bi-pencil-square"></i> Edit Profile
                    </a>
                </div>

            </div>
        </div>
    </div>
</div>

@section Scripts {
    <style>
        .hover-shadow:hover {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2) !important;
            transition: all 0.3s ease-in-out;
        }
    </style>
}
