@using Tanzania_Artifacts_MarketPlace_System_NEW_1_.Areas.Seller.SellerViewModel
@model SellerProfileViewModel

@{
    ViewData["Title"] = "Edit Seller Profile";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container py-5 animate__animated animate__fadeIn">
    <h2 class="mb-4 text-center fw-bold text-success">✏️ Edit Your Seller Profile</h2>

    <form asp-action="Edit" enctype="multipart/form-data" class="shadow-lg p-4 rounded-4 bg-white">
        <div class="row g-4">
            <div class="col-md-6">
                <label asp-for="BusinessName" class="form-label">Business Name</label>
                <input asp-for="BusinessName" class="form-control shadow-sm" />
                <span asp-validation-for="BusinessName" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="TaxId" class="form-label">Tax ID</label>
                <input asp-for="TaxId" class="form-control shadow-sm" />
                <span asp-validation-for="TaxId" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="StoreDescription" class="form-label">Store Description</label>
                <textarea asp-for="StoreDescription" class="form-control shadow-sm" rows="3"></textarea>
                <span asp-validation-for="StoreDescription" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="BankAccountInfo" class="form-label">Bank Account Info</label>
                <input asp-for="BankAccountInfo" class="form-control shadow-sm" />
                <span asp-validation-for="BankAccountInfo" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="ContactEmail" class="form-label">Contact Email</label>
                <input asp-for="ContactEmail" class="form-control shadow-sm" />
                <span asp-validation-for="ContactEmail" class="text-danger"></span>
            </div>

            <div class="col-md-3">
                <label asp-for="PhoneNumber" class="form-label">Phone</label>
                <input asp-for="PhoneNumber" class="form-control shadow-sm" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="StoreLogo" class="form-label">Store Logo <i class="bi bi-image"></i></label>
                <input asp-for="StoreLogo" type="file" class="form-control shadow-sm" />
                @if (!string.IsNullOrEmpty(Model.ExistingStoreLogoPath))
                {
                    <div class="mt-2">
                        <img src="@Model.ExistingStoreLogoPath" class="img-thumbnail shadow-sm" style="max-height: 80px;" />
                    </div>
                }
                <span asp-validation-for="StoreLogo" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="StoreBanner" class="form-label">Store Banner <i class="bi bi-images"></i></label>
                <input asp-for="StoreBanner" type="file" class="form-control shadow-sm" />
                @if (!string.IsNullOrEmpty(Model.ExistingStoreBannerPath))
                {
                    <div class="mt-2">
                        <img src="@Model.ExistingStoreBannerPath" class="img-thumbnail shadow" style="max-height: 100px;" />
                    </div>
                }
                <span asp-validation-for="StoreBanner" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success btn-lg mt-4 px-5 shadow-sm rounded-pill transition hover-shadow">
                    <i class="bi bi-save"></i> Save Changes
                </button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <style>
        .hover-shadow:hover {
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2) !important;
            transition: all 0.3s ease-in-out;
        }
    </style>
}
