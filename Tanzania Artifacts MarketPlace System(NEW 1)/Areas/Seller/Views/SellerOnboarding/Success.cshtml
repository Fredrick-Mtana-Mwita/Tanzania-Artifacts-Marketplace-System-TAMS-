@{
    ViewData["Title"] = "Seller Application Submitted";
}

<div class="container text-center mt-5">
    <h2 class="text-success">🎉 Seller Application Submitted!</h2>
    <p>Your request to become a seller has been received. You will be notified once reviewed by admin.</p>
</div>

<script>
    alert("✅ You have reached the Seller Success page.");
</script>

<!-- Animate.css link (if not already in _Layout.cshtml) -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">

            <div class="card shadow-lg border-0 rounded-4 p-4 animate__animated animate__fadeIn animate__faster" style="background: rgba(255, 255, 255, 0.95);">
                <div class="text-center">
                    <div class="animate__animated animate__bounceIn mb-3">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 5rem; text-shadow: 2px 2px 8px rgba(0,128,0,0.2);"></i>
                    </div>
                    <h2 class="text-success fw-bold mb-2">Thank you for applying!</h2>
                    <p class="lead text-secondary mb-3">
                        Your seller request has been submitted. Our team will review your application shortly.
                    </p>
                    <hr class="my-4 opacity-50" />

                    <h5 class="text-primary mb-3">What’s Next?</h5>
                    <ul class="list-group list-group-flush text-start mx-auto" style="max-width: 600px;">
                        <li class="list-group-item bg-transparent border-0 d-flex align-items-center gap-2">
                            <i class="bi bi-hourglass-split text-warning fs-5"></i>
                            <span>Wait for admin approval (check your email)</span>
                        </li>
                        <li class="list-group-item bg-transparent border-0 d-flex align-items-center gap-2">
                            <i class="bi bi-layout-text-sidebar-reverse text-info fs-5"></i>
                            <span>Once approved, access your <strong>Seller Dashboard</strong></span>
                        </li>
                        <li class="list-group-item bg-transparent border-0 d-flex align-items-center gap-2">
                            <i class="bi bi-box-seam text-success fs-5"></i>
                            <span>Start uploading products and managing orders</span>
                        </li>
                    </ul>

                    <a asp-controller="Home" asp-action="Index"
                       class="btn btn-outline-primary mt-4 px-4 py-2 rounded-pill shadow-sm transition-all"
                       style="transition: all 0.3s ease;">
                        <i class="bi bi-house-door-fill me-2"></i> Back to Home
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>

