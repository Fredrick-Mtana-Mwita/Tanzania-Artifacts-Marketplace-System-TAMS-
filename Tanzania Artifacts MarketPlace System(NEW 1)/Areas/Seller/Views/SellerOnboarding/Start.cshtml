@model Tanzania_Artifacts_MarketPlace_System_NEW_1_.Models.SellerProfile

@{
    ViewData["Title"] = "Become a Seller";
}

<div class="container py-5">
    <h2 class="text-center text-success mb-4"><i class="bi bi-shop"></i> Become a Seller</h2>

    <form asp-action="Start" method="post" enctype="multipart/form-data" class="shadow p-4 bg-light rounded-4">
        @Html.AntiForgeryToken()
        <div class="mb-3">
            <label asp-for="BusinessName" class="form-label">Business Name</label>
            <input asp-for="BusinessName" class="form-control" />
            <span asp-validation-for="BusinessName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="TaxId" class="form-label">Tax ID</label>
            <input asp-for="TaxId" class="form-control" />
            <span asp-validation-for="TaxId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="StoreDescription" class="form-label">Store Description</label>
            <textarea asp-for="StoreDescription" class="form-control" rows="3"></textarea>
            <span asp-validation-for="StoreDescription" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="BankAccountInfo" class="form-label">Bank Account Info</label>
            <input asp-for="BankAccountInfo" class="form-control" />
            <span asp-validation-for="BankAccountInfo" class="text-danger"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="btn btn-success px-4">
                <i class="bi bi-person-check-fill"></i> Submit & Become Seller
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
